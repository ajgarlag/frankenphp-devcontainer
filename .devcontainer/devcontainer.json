{
	"dockerComposeFile": [
		"../compose.yaml",
		"../compose.override.yaml",
		"compose.devcontainer.yaml"
	],
	"service": "php",
	"workspaceFolder": "/app",
	"remoteUser": "vscode",
	"forwardPorts": [80, 443],
	"customizations": {
        "vscode": {
            "settings": {
                "launch": {
                    "version": "0.2.0",
                    "configurations": [
                        {
                            "name": "Listen for Xdebug",
                            "type": "php",
                            "request": "launch",
                            "port": 9003
                        },
                        {
                            "name": "Launch currently open script",
                            "type": "php",
                            "request": "launch",
                            "program": "${file}",
                            "cwd": "${fileDirname}",
                            "port": 0,
                            "runtimeArgs": [
                                "-dxdebug.start_with_request=yes"
                            ]
                        }
                    ]
                },
                "php.validate.executablePath": "/usr/local/bin/php"
            },
            "extensions": [
                "bmewburn.vscode-intelephense-client",
                "mblode.twig-language-2",
                "-vscode.php-language-features",
                "xdebug.php-debug"
            ]
        }
    }
}
